{
  "name": "@kakerlake/main",
  "private": true,
  "version": "0.0.0",
  "main": "dist/main.js",
  "scripts": {
    "watch": "tsup --watch --config tsup.config.ts",
    "watch:preload": "tsup --watch --config tsup.config.ts",
    "dev:electron": "wait-on -t 600000 http-get://127.0.0.1:5174 && electron .",
    "dev": "concurrently -k \"pnpm run watch\" \"pnpm run watch:preload\" \"pnpm run dev:electron\"",
    "build": "tsup --config tsup.config.ts"
  },
  "devDependencies": {
    "electron": "31.7.7",
    "tsup": "^8.5.0",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0"
  }
}
